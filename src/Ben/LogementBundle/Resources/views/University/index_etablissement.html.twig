{% extends "BenLogementBundle::layout.html.twig" %}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body %}
<div class="col-md-12"><h3>Liste des établissements</h3></div>
<div class="col-md-10">
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Etablissement</th>
            <th>Univérsité</th>
            <th class="hide-print">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ loop.index }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.parent.name }}</td>
            <td class="hide-print">
                <div class="text-center">
                    <a class="btn btn-info btn-xs" href="{{ path('university_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                    <a class="btn btn-danger btn-xs" href="{{ path('university_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
<div class="col-md-2">
    <a class="btn btn-primary btn-block" href="{{ path('university_new', {type: 'etablissement'}) }}">Ajouter</a>
    <a class="btn btn-primary btn-block" href="{{ path('university_to_excel', {type: 'etablissement'}) }}"> Exporter</a>
    <a id="btnPrint" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-print"></span> Imprimer</a>
        <div class="caption text-center">
          <strong>Total:</strong> <em>{{ entities|length }} Etablissements</em>
        </div>
</div>


{% endblock body %}
