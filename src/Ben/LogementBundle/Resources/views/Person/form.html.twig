<legend>Identité</legend>
          {{ form_row(form.n_dossier, { 'label': 'N° dossier'}) }}
          {{ form_row(form.family_name, { 'label': 'Nom'}) }}
          {{ form_row(form.first_name, { 'label': 'Prénom'}) }}
          {% if personType != person.foreign %}
            {{ form_row(form.cin, { 'label': 'CIN'}) }}
          {% endif %}
          {{ form_row(form.gender, { 'label': 'Sexe'}) }}
          {{ form_row(form.bird_day, { 'label': 'Date de naissance'}) }}

            {% if personType != person.foreign %}
            {{ form_row(form.city, { 'label': 'Province'}) }}
            {% else %}
              {{ form_row(form.contry, { 'label': 'Pays'})  }}
              {{ form_row(form.passport)  }}
              {{ form_row(form.carte_sejour)  }}
            {% endif %}


<legend>Etudiant</legend>
          {% if personType != person.foreign %}
            {{ form_row(form.cne, { 'label': 'CNE'}) }}
          {% endif %}
          <div class="form-group">
            <label class="col-md-4 control-label" for="">Université</label>
            <div class="col-md-4">
              <select name="university" id="university" class="form-control"> 
                <option></option>
                {% for item in universities %}
                  <option value="{{item.id}}">{{item.name}} </option>
                {% endfor %}
              </select>
            </div>
          </div>
          {{ form_row(form.etablissement, { 'label': 'Etablissement'}) }}
          {{ form_row(form.niveau_etude, { 'label': 'Niveau d\'etude'}) }}
          {{ form_row(form.diplome, { 'label': 'Cycle d\'etude'}) }}
          {% if personType == person.new %}
            {{ form_row(form.exellence, { 'label': 'Note du Baccalauréat'}) }}
            {{ form_row(form.obtention_bac, { 'label': 'Année d\'obtention du Bac'}) }}
            {{ form_row(form.parents_revenu, { 'label': 'Revenu des parents'}) }}
            {{ form_row(form.bro_sis_number, { 'label': 'Nombre de frères et soeurs'}) }}
          {% endif %}
          {% if personType == person.special %}
            {{ form_row(form.condition_special, { 'label': 'Situation particulière'})  }}
          {% endif %}
          {{ form_rest(form) }}
          <input type="hidden" name="type" value="{{ personType }}"> 
      