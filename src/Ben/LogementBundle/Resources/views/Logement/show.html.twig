{% extends "BenLogementBundle::layout.html.twig" %}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body %}
<div class="col-md-12"><h3>Logement</h3></div>
<div class="col-md-9">
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>Nombre de place pour les étrangers</th>
            <td>{{ entity.placeetranger }}</td>
        </tr>
        <tr>
            <th>Nombre de place pour les anciens</th>
            <td>{{ entity.placeancien }}</td>
        </tr>
        <tr>
            <th>Nombre de pavillon</th>
            <td>{{ entity.blocks|length }}</td>
        </tr>
        <tr>
            <th>Liste des utilisateurs qui gére ce logement</th>
            <td>
                <ul>
                {% for item in entity.users %}
                    <li>{{ item.username }}</li>
                {% endfor %}
                </ul>
            </td>
        </tr>
    </table>
</div>

<div class="col-md-3 hide-print">
    <form action="{{ path('logement_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <a id="submitEditForm" class="btn btn-primary btn-block" href="{{ path('logement_edit', { 'id': entity.id }) }}"> Mettre à jour</a>
    <a class="btn btn-primary btn-block " href="{{ path('logement') }}"> Revenir vers la liste</a>
    <a id="btnPrint" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-print"></span> Imprimer</a>
    <button type="submit" class="btn btn-embossed btn-danger btn-block"> Supprimer </button>
    </form>
</div>

{% endblock body %}
