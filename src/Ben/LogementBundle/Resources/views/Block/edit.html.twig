    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <button type="submit" name="subvalider" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Mettre Ã  jour</button>
        <button id="js-delete" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</button>
      </div>
    </div>
</form>


<form id="deleteForm" action="{{ path('block_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
</form>

